<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="25dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="35dp"
    android:backgroundTint="@color/white"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:orientation="horizontal"
                    android:background="@color/backpink">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/dollar_icon"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"

                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical">
                                <TextView
                                    android:id="@+id/txt_expensename"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:textSize="23dp"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/geomanist"
                                    android:text="Cultural Exchange"/>
                                <TextView
                                    android:id="@+id/txt_expensetype"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginLeft="15dp"
                                    android:textSize="18dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/txt_purple"
                                    android:fontFamily="@font/geomanist"
                                    android:text="Melbourne, Australia"/>
                        </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txt_expensedate"
                            android:layout_width="fill_parent"
                            android:gravity="left"
                            android:layout_marginLeft="20dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textSize="20dp"
                            android:textColor="#836FDA"
                            android:fontFamily="@font/geomanist"
                            android:textFontWeight="1000"
                            android:text="12/1/2021"/>
                        <TextView
                            android:id="@+id/txt_expensetime"
                            android:layout_width="fill_parent"
                            android:gravity="left"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textSize="20dp"
                            android:textColor="#836FDA"
                            android:fontFamily="@font/geomanist"
                            android:textFontWeight="1000"
                            android:text="12:25"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />
                        <TextView
                            android:id="@+id/txt_expensecomment"
                            android:layout_width="fill_parent"
                            android:gravity="right"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="20dp"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/geomanist"
                            android:text="Requested"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="42dp"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/brandon"
                            android:textColor="@color/black"
                            android:text="$"/>
                        <TextView
                            android:id="@+id/txt_expenseamt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="45dp"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/brandon"
                            android:textColor="@color/black"
                            android:text="4000"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />
                        <android.widget.Button
                            android:id="@+id/expense_edit"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="10dp"
                            android:paddingRight="13dp"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/geomanist"
                            android:textAllCaps="false"
                            android:background="@drawable/button_background"
                            android:drawableRight="@drawable/edit_icon"
                            android:textColor="@color/darkerpink"
                            />
                        <android.widget.Button
                            android:id="@+id/expense_delete"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="20dp"
                            android:paddingRight="13dp"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/geomanist"
                            android:textAllCaps="false"
                            android:background="@drawable/button_background"
                            android:drawableRight="@drawable/delete_icon"
                            android:textColor="@color/darkerpink"
                            />
                </LinearLayout>

        </LinearLayout>

</androidx.cardview.widget.CardView>